{
    "name": "biurad/php-framework",
    "description": "Biurad PHP Framework for PHP - The PHP Framework for now and the future...",
    "keywords": [
        "biurad",
        "biuradphp",
        "psr",
        "psr-7",
        "psr-14",
        "psr-11",
        "psr-15",
        "psr-17",
        "php framework"
    ],
    "license": "BSD-3-Clause",
    "type": "project",
    "prefer-stable": true,
    "homepage": "https://biurad.com",
    "authors": [
        {
            "name": "Divine Niiquaye Ibok",
            "email": "divineibok@gmail.com",
            "homepage": "https://www.biurad.com"
        }
    ],
    "config": {
        "process-timeout": 900,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2.5",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "biurad/biurad-framework": "^1.0",
        "symfony/dotenv": "^4.4"
    },
    "require-dev": {
        "ext-mbstring": "*",
        "ext-sqlite3": "*",
        "phpunit/phpunit": "^8.5",
        "symfony/var-dumper": "5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "app:env": "@php -r \"file_exists('.env') || copy('env.example', '.env');\"",
            "app:clean": "@php biurad cache:clean --logs --ansi"
        },
        "post-autoload-dump": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "@php biurad generate:key --ansi"
        ],
        "coverage-clover": "phpunit --colors=always --do-not-cache-result --coverage-clover clover.xml",
        "test": "phpunit --colors=always --do-not-cache-result",
        "serve": "php biurad server:run"
    }
}
